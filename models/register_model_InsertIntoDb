<?php
require 'core/database.php';
    class InsertIntoDb extends RegisterUser{
        private $registerUser;
        private $dbCon;

        public function __construct($firstName, $lastName, $email, $userName, $password, $gender) {
            $this->registerUser = new RegisterUser($firstName, $lastName, $email, $userName, $password, $gender);
            
            $this->dbCon = connectToDatabase();
        }
        public function insertIntoDb() {
            $prep = $this->dbCon->prepare("INSERT INTO `user` (firstName, lastName, email, userName, password, gender)
                VALUES(:firstName, :lastName, :email, :userName, :password, :gender)"
            );
            $result = $prep->execute([
                ':firstName' => $this->registerUser->firstName, 
                ':lastName' => $this->registerUser->lastName, 
                ':email' => $this->registerUser->email, 
                ':userName' => $this->registerUser->userName, 
                ':password' => $this->registerUser->password, 
                ':gender' => $this->registerUser->gender,
                ]);
        }

    }